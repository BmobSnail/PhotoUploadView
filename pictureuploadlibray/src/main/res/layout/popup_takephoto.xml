<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    android:paddingBottom="@dimen/partition_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_camera"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/string_camera"
            android:background="@drawable/border_white"
            android:textColor="#555555"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/partition_so_large"
            android:layout_marginRight="@dimen/partition_so_large"
            android:background="@color/half_transparent" />

        <TextView
            android:id="@+id/popup_album"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/border_white"
            android:text="@string/string_album"
            android:textColor="#555555"
            android:textSize="12sp" />
    </LinearLayout>


        <TextView
            android:id="@+id/popup_cancel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:background="@drawable/border_white"
            android:text="@string/string_cancel"
            android:textColor="#555555"
            android:textSize="12sp" />


</LinearLayout>