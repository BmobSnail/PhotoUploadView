<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/actionBar_left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/partition_normal"
        android:gravity="center"
        android:paddingLeft="@dimen/partition_big"
        android:paddingRight="@dimen/partition_big"
        android:text="left"
        android:textSize="@dimen/textSize_normal"
        android:visibility="visible" />


    <TextView
        android:id="@+id/actionBar_center_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/partition_big"
        android:paddingBottom="@dimen/partition_big"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="title"
        android:textSize="@dimen/textSize_big" />


    <TextView
        android:id="@+id/actionBar_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/partition_normal"
        android:gravity="center"
        android:paddingLeft="@dimen/partition_normal"
        android:paddingStart="@dimen/partition_normal"
        android:paddingRight="@dimen/partition_big"
        android:paddingEnd="@dimen/partition_normal"
        android:text="right"
        android:textSize="@dimen/textSize_normal"
        android:visibility="visible" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/half_transparent" />
</RelativeLayout>

